<!DOCTYPE html>
<html lang="en">
  <%- include('../layout/head.ejs') %>
  <body>
    <%- include('../layout/header.ejs') %>

    <div class="main">
      <div class="card">

     <p><%= detail.title %> </p>  
     <p><%= detail.company %> </p>  
      <p><%= detail.location %></p> 
      <p><%= detail.url %> </p> 
    <form action="/delete/<%=detail.id%>?_method=delete" method="POST">
      <button>Delete</button>
    </form>
    <form action="/update/<%=detail.id%>?_method=put" method="POST">
<input type="text" name="title" value="<%= detail.title %>" >
<input type="text" name="company" value="<%= detail.company %>" >
<input type="text" name="location" value="<%= detail.location %>" >
<input type="text" name="url" value="<%= detail.url %>" >
<button>Submit changes</button>
    </form>
    </div>
    

    <%- include('../layout/footer.ejs') %>
  </body>
</html>
