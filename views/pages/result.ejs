<!DOCTYPE html>
<html lang="en">
  <%- include('../layout/head.ejs') %>
  <body>
    <%- include('../layout/header.ejs') %>

    <div class="main">
      <div class="card">
        <% result.forEach(element => { %>
          <h2>title: <%= element.title %></h2>
          <p>company: <%= element.company %></p>
          <p>location: <%= element.location %></p>
          <p>url :<%= element.url %></p>
          <form action="/mylist" method="POST">
<input type="text" name="title" value="<%= element.title %>" hidden>
<input type="text" name="company" value="<%= element.company %>" hidden>
<input type="text" name="location" value="<%= element.location %>" hidden>
<input type="text" name="url" value="<%= element.url %>" hidden>
          <button>add to list </button>
          </form>
          <% }) %>
    </div>
    

    <%- include('../layout/footer.ejs') %>
  </body>
</html>
